<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xywg.admin.modular.system.dao.FileInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.xywg.admin.modular.system.model.FileInfo">
        <id column="id" property="id" />
        <result column="relevance_id" property="relevanceId" />
        <result column="file_name" property="fileName" />
        <result column="path" property="path" />
        <result column="type" property="type" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, relevance_id AS relevanceId, file_name AS fileName, path, type
    </sql>

    <select id="getByTableNameAndId" resultType="com.xywg.admin.modular.system.model.FileInfo">
        SELECT
        <include refid="Base_Column_List"/>
        from buss_file_info
        where relevance_id = #{r} and type = #{t}
    </select>
    

    <!--添加-->
   <insert id="insertFileInfo" useGeneratedKeys="true" keyProperty="map.id" parameterType="com.xywg.admin.modular.system.model.FileInfo" >
        insert into buss_file_info
        (
        relevance_id,
        file_name,
        path,
        type
        )VALUES(
        #{map.relevanceId},
        #{map.fileName},
        #{map.path},
        #{map.type}
        )
    </insert>
    

    <select id="insertPatch" parameterType="com.xywg.admin.modular.system.model.FileInfo">
        insert into buss_file_info (relevance_id, file_name, path, `type`)VALUES
        <foreach collection="list" separator=","  index="index" item="item">
            (#{item.relevanceId},#{item.fileName},#{item.path},#{item.type})
        </foreach>
    </select>

    <delete id="deletePatch">
        delete  from  buss_file_info  where id  IN
        <foreach collection="list" item="item" index="index" separator="," open="(" close=")">
            #{item}
        </foreach>
    </delete>
</mapper>
