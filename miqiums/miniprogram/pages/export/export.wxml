<view class="container">
  <view class='page_row'>
    <view class="search">
      <view class="df search_arr">
        <input bindinput="inputQueryMaterial" placeholder="物料" value="{{searchValue}}" />
      </view>
      <view class="df search_arr">
        <input bindinput="inputQueryRemark" placeholder="地址" value="{{searchValue}}" />
      </view>
    </view>
      <view class="search">
      <view class="df search_arr">
        <input bindinput="inputQueryMonth" placeholder="月份" value="{{searchValue}}" />
      </view>
      <view class="df search_arr">
        <input bindinput="inputQueryDay" placeholder="日期" value="{{searchValue}}" />
      </view>
      <view class='sousuo' bindtap="GetExportInfo">搜索</view>
    </view> 
  </view>

  <button type="primary" bindtap="GotoExportAdd" class="btn_add" size="mini">新增 </button>
  <button  class="btn_refresh" bindtap="OnRefresh" size="mini">刷新</button>
  <!--数据列表 -->
  <view class="table">
    <view class="tr bg-w">
      <view class="th">物料名称</view>
      <view class="th">出库数量</view>
      <view class="th">时间</view>
      <view class="th">地址</view>
    </view>
    <block wx:for="{{listData}}" wx:key="name">
      <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
        <view class="td">{{item.name}}</view>
        <view class="td">{{item.num}}</view>
        <view class="td">{{item.add_time}}</view>
        <view class="td">{{item.remark}}</view>
      </view>
      <view class="tr" wx:else>
        <view class="td">{{item.name}}</view>
        <view class="td">{{item.num}}</view>
        <view class="td">{{item.add_time}}</view>
        <view class="td">{{item.remark}}</view>
      </view>
    </block>
  </view>
</view>