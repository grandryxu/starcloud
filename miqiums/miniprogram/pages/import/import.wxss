@import "../../style/guide.wxss";

.search {
  display: flex;
  left: 2px;
  width: 100%;
  background-color: #e6f3f9;
}

.search_arr {
  width: 40%;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 15rpx;
}



.search_arr input {
  margin-left: 10rpx;
  height: 60rpx;
  border-radius: 5px;
}

.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}

.sousuo {
  margin-left: 10rpx;
  width: 12%;
  background-color: #04be02;
  color: #d0d0d0;
  line-height: 180%;
  text-align: center;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
}


.btn_add{
  left: 0px;
  position: absolute;
  margin-top: 5rpx;
  top:5rem;
}

.btn_refresh{
  left: 60px;
  margin-top: 5rpx;
  position: absolute;
  background-color: #36f;
  color:#d0d0d0;
  top:5rem;
}

.btn_order_import{
  left: 120px;
  margin-top: 5rpx;
  position: absolute;
  background-color: rgb(255, 190, 51);
  color:#ffffff;
  top:5rem;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left: 25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

.table {
  border: 0px solid darkgray;
  width: 100%;
  margin-top: 2.2rem;
  position: absolute;
  top:5rem;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}

.td {
  width: 40%;
  justify-content: center;
  text-align: center;
}

.bg-w {
  background: snow;
}

.bg-g {
  background: #e6f3f9;
}

.th {
  width: 40%;
  justify-content: center;
  background: #36f;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}
